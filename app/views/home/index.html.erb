<div class="p-5 rounded text-center">

  <% unless user_signed_in? %>

    <h2 class="mb-5">Welcome to Sweety App</h2>
    <div class="row justify-content-center">
      <div class="col-md-3">
        <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-lg btn-success px-5 py-3' %>
      </div>
      <div class="col-md-3">
        <%= link_to 'Register', new_user_registration_path, class: 'btn btn-lg btn-outline-success px-5 py-3' %>
      </div>
      
    </div>

  <% else %>

    <h2 class="mb-5">Welcome to Sweety App, <%= get_name_from_email(current_user) %></h2>

  <% end %>

</div>